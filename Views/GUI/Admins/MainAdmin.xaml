<Window x:Class="BANKGUI.Views.GUI.Admins.MainAdmin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BANKGUI.Views.GUI.Admins"
        mc:Ignorable="d"
        Title="Panel Administracyjny" Height="450" Width="800" Topmost="True">
    <Grid>
        <TextBlock x:Name="title" HorizontalAlignment="Center" Margin="0,10,0,0" TextWrapping="Wrap" Text="Witaj" VerticalAlignment="Top" Height="39" Width="800" TextAlignment="Center" FontSize="20" FontWeight="Bold"/>
        <ListBox x:Name="usersListbox" ItemsSource="{Binding Users}" Margin="48,54,422,0" Width="330" Height="315" VerticalAlignment="Top"/>
        <ListBox d:ItemsSource="{Binding UserAccounts}" Margin="440,54,25,65" Width="330"/>
        <Button x:Name="addUser"  Content="Dodaj" HorizontalAlignment="Left" Margin="48,369,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="editUser" Content="Edytuj" HorizontalAlignment="Left" Margin="158,369,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="deleteUser" Content="Usuń" HorizontalAlignment="Left" Margin="268,369,0,0" VerticalAlignment="Top" Width="110"/>

        <Button x:Name="addAccount"  Content="Dodaj" HorizontalAlignment="Left" Margin="442,369,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="editAccount" Content="Edytuj" HorizontalAlignment="Left" Margin="552,369,0,0" VerticalAlignment="Top" Width="110"/>
        <Button x:Name="deleteAccount" Content="Usuń" HorizontalAlignment="Left" Margin="662,369,0,0" VerticalAlignment="Top" Width="110"/>

    </Grid>
</Window>
