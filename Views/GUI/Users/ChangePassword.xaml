<Window x:Class="BANKGUI.Views.GUI.Users.ChangePassword"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BANKGUI.Views.GUI.Users"
        mc:Ignorable="d"
        Title="ChangePassword" Height="225" Width="270">
    <Grid>
        <TextBlock x:Name="passwordtextBlock" HorizontalAlignment="Left" Margin="40,21,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="104" Height="20"><Run Language="pl-pl" Text="Haslo"/></TextBlock>
        <PasswordBox  x:Name="passwordtextBox" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="190" Password="" Margin="0,46,0,0"/>
        <TextBlock x:Name="repasswordtextBlock" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="105" Height="20" Margin="40,80,0,0"><Run Language="pl-pl" Text="Powtórz haslo"/></TextBlock>
        <PasswordBox x:Name="repasswordtextBox" HorizontalAlignment="Center"  VerticalAlignment="Top" Width="190" Password="" Margin="0,105,0,0"/>
        <Button x:Name="submit" Content="Potwierdz" HorizontalAlignment="Center" Margin="0,144,0,0" VerticalAlignment="Top" Width="190" Click="submit_Click"/>

    </Grid>
</Window>
